{
	"$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
	"checker_args" : "-custom-attribute:material,uniform_buffer",
	"enable_semantic_tokens": true,
	"enable_document_symbols": true,
	"enable_hover": true,
	"enable_snippets": true,
	"enable_references": true,
	"enable_rename": true,
	"profile": "default",
	"profiles": [
		{ "name": "default", "checker_path": ["./examples", "."]},
		{ "name": "linux_profile", "os": "linux", "checker_path": ["./examples", "."]},
		{ "name": "windows_profile", "os": "windows", "checker_path": ["./examples", "."]}
	]
}
